<% provide(:title, 'Nuevo Contrato') %>
<h1>Nuevo Contrato</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contrato, :html => { :class => "form-horizontal"} ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="control-group">
        <%= f.label :cod_contrato, :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :cod_contrato, :class => "input-mini", :placeholder => "" %>
        </div>
      </div>
      
      <div class="control-group">
      <%= f.label :empresa, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :empresa, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
      <%= f.label :tecnologia, :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :tecnologia, :class => "input-large" %>
        </div>
      </div>

      <div class="control-group">
      <%= f.label :proyecto_id, :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :proyecto_id, :class => "input-small" %>
        </div>
      </div>

      <div class="control-group">
      <%= f.label "Fechas", :class => "control-label"  %>
        <div class="controls">      
          <%= f.text_field :fecha_ini, :class => "input-small",:id => "fecha1", :placeholder => "Inicio" %>
          <%= f.text_field :fecha_fin, :class => "input-small",:id => "fecha2", :placeholder => "Fin"%>
          <%= f.text_field :fecha_amp, :class => "input-small",:id => "fecha3", :placeholder => "Ampliación" %>
        </div>
      </div>

      <div class="control-group">
      <%= f.label "Presupuesto sin IVA", :class => "control-label"  %>
        <div class="controls">
          <div class="input-append">
            <%= f.text_field :presupuesto_noiva,:id => "appendedInput", :class => "span2" %>
            <span class="add-on">€</span>
          </div>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Crea Contrato", class: "btn btn-large btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
<script>
  $(document).ready(function() {
    $( "#fecha1" ).datepicker({ dateFormat: "dd-mm-yy" });
    $( "#fecha2" ).datepicker({ dateFormat: "dd-mm-yy" });
    $( "#fecha3" ).datepicker({ dateFormat: "dd-mm-yy" });
  });
</script>