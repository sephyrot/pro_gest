<% provide(:title, 'Nuevo Proyecto') %>
<h1>Nuevo Proyecto</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@proyecto, :html => { :class => "form-horizontal"} ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="control-group">
        <%= f.label :nombre, :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :nombre, :class => "input-medium", :placeholder => "Nombre" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Crea Proyecto", class: "btn btn-large btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
